{
  "name": "api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "db:bootstrap": "tsx src/scripts/bootstrapDb.ts",
    "backfill:completed": "tsx src/scripts/backfillCompletedOrders.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "npm run db:bootstrap && prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/jwt": "^9.1.0",
    "@prisma/client": "^6.16.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "openai": "^5.22.0",
    "shared": "file:../../packages/shared",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.9",
    "eslint": "^9.39.1",
    "prisma": "^6.16.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
